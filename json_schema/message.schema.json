{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://raw.githubusercontent.com/xbadiche/cumfidio/main/json_schema/message.schema.json",
    "title": "Message",
    "description": "Un message comprend un émetteur (from), un destinataire (to), une heur (timestamp) et un des contenus possibles",
    "required": [ "from", "to", "timestamp"],
    "minProperties" : 4,
    "maxProperties" : 4,
    "type": "object",
    "properties": {
        "from": {
            "$ref": "https://raw.githubusercontent.com/xbadiche/cumfidio/main/json_schema/reference.schema.json"
        },
        "to": {
            "$ref": "https://raw.githubusercontent.com/xbadiche/cumfidio/main/json_schema/reference.schema.json"
        },
        "timestamp" : {
            "type" : "string",
            "format" : "date-time"
        },
        "affectation" : {
            "type" : "object",
            "title": "Affectation d'un dossier",
            "description": "Affectation d'un dossier au destinataire. Le dossier est une créance (pour l'instant)",
            "minProperties" : 1,
            "maxProperties" : 1,
            "properties" : {
                "creance" : {
                    "$ref": "https://raw.githubusercontent.com/xbadiche/cumfidio/main/json_schema/creance.schema.json"
                }
            }
        },
        "desaffectation" : {
            "type" : "object",
            "title" : "Désaffectation d'un dossier",
            "description" : "le dossier désaffecté peut être une créance",
            "minProperties" : 1,
            "maxProperties" : 1,
            "properties" : {
                "idCreance" : {
                    "$ref": "https://raw.githubusercontent.com/xbadiche/cumfidio/main/json_schema/reference.schema.json"
                }
            }
        },
        "paiementCreance" : {
            "type" : "object",
            "title" : "Paiement",
            "description" : "Paiement d'un montant sur une créance", 
            "required": [ "idCreance", "paiement", "idResponsable"],
            "properties" : {
                "idCreance" : {
                    "$ref": "https://raw.githubusercontent.com/xbadiche/cumfidio/main/json_schema/reference.schema.json"
                },
                "paiement" : {
                    "$ref": "https://raw.githubusercontent.com/xbadiche/cumfidio/main/json_schema/paiement.schema.json"
                },
                "idResponsable" : {
                    "description" : "Organisation qui a reçue le paiement. Ce peut être le prestataire ou le donneur d'ordre",
                    "$ref": "https://raw.githubusercontent.com/xbadiche/cumfidio/main/json_schema/reference.schema.json"
                }
            }          
        },
        "miseAjour" : {
            "type" : "object",
            "title": "Mise à jour d'un dossier",
            "description": "Mise à jour d'un dossier par exemple d'une créance",
            "minProperties" : 1,
            "maxProperties" : 1,
            "properties" : {
                "creance" : {
                    "$ref": "https://raw.githubusercontent.com/xbadiche/cumfidio/main/json_schema/creance.schema.json"
                }
            }
        }
    }
}