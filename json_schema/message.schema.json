{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://raw.githubusercontent.com/xbadiche/cumfidio/main/json_schema/message.schema.json",
    "title": "Message",
    "description": "Un message comprend un émetteur (from), un destinataire (to), une heur (timestamp) et un des contenus possibles",
    "required": [ "from", "to", "timestamp"],
    "minProperties" : 4,
    "maxProperties" : 4,
    "type": "object",
    "properties": {
        "from": {
            "$ref": "https://raw.githubusercontent.com/xbadiche/cumfidio/main/json_schema/reference.schema.json"
        },
        "to": {
            "$ref": "https://raw.githubusercontent.com/xbadiche/cumfidio/main/json_schema/reference.schema.json"
        },
        "timestamp" : {
            "type" : "string",
            "format" : "date-time"
        },
        "affectation" : {
            "type" : "object",
            "title": "Affectation d'un dossier",
            "description": "Affectation d'un dossier au destinataire. Le dossier est une créance",
            "minProperties" : 1,
            "maxProperties" : 1,
            "properties" : {
                "creance" : {
                    "$ref": "https://raw.githubusercontent.com/xbadiche/cumfidio/main/json_schema/creance.schema.json"
                }
            }
        }
    }
}