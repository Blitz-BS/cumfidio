{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://raw.githubusercontent.com/xbadiche/cumfidio/main/json_schema/message.schema.json",
    "title": "Message",
    "description": "A message contains a transmitter, a receiver, a timestamp and one of the possible payload",
    "required": [ "from", "to", "timestamp"],
    "minProperties" : 4,
    "maxProperties" : 4,
    "type": "object",
    "properties": {
        "from": {
            "$ref": "https://raw.githubusercontent.com/xbadiche/cumfidio/main/json_schema/reference.schema.json"
        },
        "to": {
            "$ref": "https://raw.githubusercontent.com/xbadiche/cumfidio/main/json_schema/reference.schema.json"
        },
        "timestamp" : {
            "type" : "string",
            "format" : "date-time"
        },
        "affectation" : {
            "type" : "object",
            "title": "Affectation d'un dossier",
            "description": "Affectation d'un dossier au destinataire",
            "minProperties" : 1,
            "maxProperties" : 1,
            "properties" : {
                "dette" : { "type" : "string" }
            }
        } 
    }
}