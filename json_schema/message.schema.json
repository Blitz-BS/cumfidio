{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://raw.githubusercontent.com/xbadiche/cumfidio/main/json_schema/message.schema.json",
    "title": "Message",
    "description": "A message is the element in the messages collection",
    "required": [ "from", "to", "timestamp", "case", "event" ],
    "type": "object",
    "properties": {
        "from": {
            "$ref": "https://raw.githubusercontent.com/xbadiche/cumfidio/main/json_schema/reference.schema.json"
        },
        "to": {
            "$ref": "https://raw.githubusercontent.com/xbadiche/cumfidio/main/json_schema/reference.schema.json"
        },
        "timestamp" : {
            "type" : "string",
            "format" : "date-time"
        },
        "case" : {
            "type" : "string"
        },
        "oneOf" : [
            {"event1" : {"type": "string"} },
            {"event2" : {"type": "string"} }
        ]
    }
}