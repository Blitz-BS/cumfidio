{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://raw.githubusercontent.com/xbadiche/cumfidio/main/json_schema/email.schema.json",
    "title": "Email address",
    "description": "Email address.",
    "required": [ "email" ],
    "type": "object",
    "properties": {
        "date" : {
            "type" : "string",
            "pattern" : "^[\\w-\\.]+@([\\w-]+\\.)+[\\w-]{2,4}$"
        }
    }
}