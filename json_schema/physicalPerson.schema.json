{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://raw.githubusercontent.com/xbadiche/cumfidio/main/json_schema/physicalPerson.schema.json",
    "title": "Physical person",
    "description": "Physical person.",
    "type": "object",
    "required": [ "firstname", "lastname" ],
    "properties": {
        "firstname" : {
            "type": "string"
        },
        "lastname" : {
            "type": "string"
        },
        "birthdate" : {
            "type" : "string",
            "format" : "date",
            "description" : "YYYY-MM-DD"
        },
        "civility" : {
            "enum" : ["Mr", "Mrs", "Mr and Mrs", "Ms"]
        },
        "addresses" : {
            "type" : "array",
            "items" : {
                "$ref": "https://raw.githubusercontent.com/xbadiche/cumfidio/main/json_schema/address.schema.json"
            }
        },
        "phones" : {
            "type" : "array",
            "items" : {
                "$ref": "https://raw.githubusercontent.com/xbadiche/cumfidio/main/json_schema/phone.schema.json"
            }            
        },
        "emails" : {
            "type" : "array",
            "items" : {
                "type" : "string",
                "format" : "email"
            }            
        }
    }
}