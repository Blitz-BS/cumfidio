{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://raw.githubusercontent.com/xbadiche/cumfidio/main/json_schema/phone.schema.json",
    "title": "Phone",
    "description": "Mobile or fix phone.",
    "required": [ "number" ],
    "type": "object",
    "properties": {
        "number": {
          "type": "string",
          "pattern" : "^\\+[0-9]{9,17}$",
          "description": "international format. exemple : +33614194315"
        },
        "type": {
          "enum" : ["fix", "mobile"]
        }
    }
}